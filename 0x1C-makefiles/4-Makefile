# build an executable named holberton from holberton.c
CC=gcc
SRC = holberton.c main.c
OBJ = $(SRC:.c=.o)
NAME = holberton
RM = rm
CFLAGS = -f

all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

.PHONY: clean oclean fclean re
clean:
	$(RM) $(CFLAGS) *~ $(NAME)

oclean:
	$(RM) $(CFLAGS) $(OBJ)

fclean: clean oclean

re: oclean all
