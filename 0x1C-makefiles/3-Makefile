# build an executable named holberton from holberton.c
CC=gcc
SRC = holberton.c main.c
OBJ = $(SRC:.c=.o)
NAME = holberton
RM = rm -f
all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

.PHONY: clean
clean:
	$(RM) *~ holberton

.PHONY: oclean
oclean:
	$(RM) $(OBJ)

.PHONY: fclean
fclean: clean oclean

.PHONY: re
re: oclean all
